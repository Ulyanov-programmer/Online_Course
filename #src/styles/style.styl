body {
	height 100%;
	color var(--text-c);
	font adapt-fsize($mainFontSize, $minFontSize) var(--main-font-family);

	button {
		color var(--text-c);
		font-size adapt-fsize($mainFontSize, $minFontSize);
	}
}

.main {
	background var(--bg);

	&__body {
	}
}

.hero {
	position relative;
	overflow hidden;
	background linear-gradient(45deg, rgba(255, 63, 58, 20%), rgba(247, 94, 5, 20%));

	&__clouds {
	}

	&__body {
		* {
			position static;
			z-index 1;
		}

		padding-top 150px;
		padding-bottom 80px;

		@media (max-width 768px) {
			padding-top 100px;
			padding-bottom 30px;
		}
	}

	&__main-content {
		flex-set row nowrap;
		padding-bottom 180px;

		@media (min-width 1440px) {
			firstLevelElementsMargin 'right' 100;
		}

		@media (max-width 768px) {
			padding-bottom 50px;
		}
	}

	&__content {
		flex 1 1 50%;
		firstLevelElementsMargin 'bottom' 50;

		@media (max-width 1000px) {
			flex-set column nowrap;
			align-items center;
			text-align center;
		}

		@media (max-width 768px) {
			firstLevelElementsMargin 'bottom' 20;
		}
	}

	&__play-video {
		display inline-flex;
		justify-content center;
		align-items center;
		firstLevelElementsMargin 'right' 15;
		cursor pointer;

		&:hover, &:focus {
			.hero__play-video-img {
				&:after {
					block-size 150%;
				}
			}
		}
	}

	&__play-video-img {
		position relative;

		img {
			position relative;
			z-index 1;
		}

		&:after {
			position absolute;
			top 50%;
			left 50%;
			transform translate(-50%, -50%);
			block-size 100%;
			border-radius 50%;
			background hsla(2, 100%, 61%, .2);
			transition all .2s ease;
			content '';
		}
	}

	&__title {
		@extend h1;

		@media (max-width 768px) {
			font-size 48px;
		}

		@media (max-width 426px) {
			font-size 36px;
		}
	}

	&__refs {
		firstLevelElementsMargin 'bottom' 15;

		@media (min-width 426px) {
			firstLevelElementsMargin 'right' 25;
		}

		@media (max-width 426px) {
			flex-set column nowrap;
			align-items center;
		}
	}

	&__decor {
		@media (max-width 1440px) {
			flex 1 1 40%;

			img {
				width 100%;
			}
		}

		@media (max-width 1000px) {
			display none;
		}
	}

	&__circle-decor {
		display inline-flex;
		padding 5px;

		@media (max-width 1100px) {
			display none;
		}
	}

	&__advantages {
		flex-set row wrap;
		align-items center;
		justify-content space-between;

		@media (max-width 426px) {
			flex-flow column nowrap;
		}
	}
}

.abstract-images {
	&__element {
		position absolute;
	}
}

.hero__clouds {
	* {
		@media (max-width 768px) {
			transform scale(.4);
		}
	}

	.circles {
		bottom -10%;
		left -8%;

		@media (max-width 426px) {
			left -25%;
		}
	}

	.shapes {
		top 15%;
		left 3%;
	}

	.shapes-top-right {
		top -5%;
		right 5%;
	}

	.short-shapes {
		top 40%;
		left 40%;
	}

	.semicircle {
		bottom 30%;
		left 40%;
	}

	.dots {
		right -4%;
		bottom 20%;

		@media (max-width 426px) {
			right -20%;
		}
	}
}

.advantage {
	&__body {
		flex-set row nowrap;
		align-items center;
		padding 5px;
		color #000;
		firstLevelElementsMargin 'right' 10;
	}

	&__number {
		font-weight 900;
		font-size 46px;
	}

	&__title {
	}
}

.about-us {
	position relative;
	overflow hidden;

	&__clouds {
		@media (max-width 1000px) {
			* {
				transform scale(.6);
			}
		}

		.circles {
			bottom 0;
			right -10%;

			@media (max-width 426px) {
				right -40%;
			}
		}

		.dots {
			top 30%;
			left -5%;

			@media (max-width 426px) {
				left -25%;
			}
		}
	}

	&__body {
		* {
			position static;
			z-index 1;
		}

		flex-set row nowrap;
	}

	&__decor {
		flex 1 1 60%;

		img {
			width 100%;
			object-fit cover;
		}

		@media (max-width 1000px) {
			display none;
		}
	}

	&__content {
		flex 1 1 40%;
		margin-left 135px;
		firstLevelElementsMargin 'bottom' 40;

		@media (max-width 1200px) {
			margin-left 50px;
		}

		@media (max-width 1000px) {
			flex-set column nowrap;
			align-items center;
			margin-left 0;

			.title-wrapper {
				text-align center;
			}
		}
	}

	&__subtitle {
	}

	&__title {
	}

	&__list {
		@media (max-width 1000px) {
			flex-set column nowrap;
			margin auto;
		}
	}

	&__li {
		padding 12px 0;

		@media (max-width 1000px) {
			flex-basis 70%;
		}
	}
}

.decored-li {
	display flex;

	&:before {
		display inline-block;
		height 100%;
		margin-right 15px;
		content url('../img/decor/checkmark.svg');
	}
}

.courses {
	&__body {
	}

	&__header {
		display flex;
		align-items flex-end;
		justify-content space-between;
		padding-bottom 60px;
		firstLevelElementsMargin 'right' 15;
	}

	&__subtitle {
	}

	&__title {
	}

	&__grid {
		display grid;
		grid-template 'course course' auto / 1fr 1fr;
		gap 30px;

		@media (max-width 1000px) {
			grid-template 'course' auto / 1fr;
		}
	}

	&__course {
	}
}

.subscribe {
	position relative;
	background linear-gradient(45deg, rgba(255, 63, 58, 20%), rgba(247, 94, 5, 20%));

	&__decor {
		* {
			@media (max-width 950px) {
				width 35%;
			}
		}

		.decor {
			bottom 0;
			left 0;

			@media (max-width 768px) {
				bottom 0;
				left 50%;
				transform translate(-50%, 0);
			}
		}

		.decor2 {
			bottom 0;
			right 0;

			@media (max-width 768px) {
				display none;
			}
		}
	}

	&__body {
		flex-set column nowrap;
		align-items center;
		width 50%;
		padding 120px 0 180px 0;
		firstLevelElementsMargin 'bottom' 60;

		* {
			position relative;
			z-index 2;
		}

		@media (max-width 768px) {
			width 100%;
			padding 30px 10px 180px 10px;
		}
	}

	&__subtitle {
	}

	&__title {
		@media (max-width 768px) {
			font-size 34px;
		}
	}

	&__form {
		flex-set row nowrap;
		firstLevelElementsMargin 'right' 25;

		button {
			@media (max-width 426px) {
				padding 10px;
			}
		}
	}

	&__input {
		min-width 400px;
		padding 13px 16px;
		height 100%;

		@media (max-width 768px) {
			min-width 60vw;
		}
	}
}

.how-we-do {
	&__body {
		firstLevelElementsMargin 'bottom' 60;
	}

	.title-wrapper {
	}

	&__subtitle {
	}

	&__title {
	}

	&__buttons {
		flex-set row wrap;
		justify-content space-between;
		firstLevelElementsMargin 'right' 10;
	}

	&__accord-button {
		display flex;
		justify-content center;
		align-items center;
		firstLevelElementsMargin 'right' 8;
		flex 1 1 20%;
		min-width 150px;
		padding 12px 12px;
		color #9A9CA5;
		border 1px solid rgba(255, 255, 255, 0);
		border-radius 4px;
		font-size: 17px;
		font-weight: 600;
		transition all .3s ease;

		path {
			fill #9A9CA5;
			transition all .3s ease;
		}

		&.active, &:hover, &:focus {
			border-color #FF3F3A;
			color #FF3F3A;

			path {
				fill #FF3F3A;
			}
		}
	}

	&__content {
	}

	&__accord-cont-item {
	}
}

.accord-cont-item {
	display grid;
	grid-template 'title preview' 1fr 'text preview' 1fr / 1fr 1fr;
	gap 50px;
	hide();
	transition all .3s ease;

	&.active {
		show();
	}

	@media (max-width 768px) {
		grid-template 'title' auto 'preview' 200px 'text' auto / 1fr;
		gap 25px;
		justify-items center;
	}

	&__title {
		grid-area title;
		color #1E212C;
		font-weight 900;
		font-size 32px;

		@media (min-width 768px) {
			align-self end;
		}

		@media (max-width 768px) {
			align-self center;
		}
	}

	&__text {
		grid-area text;
		line-height 1.6;
	}

	&__preview {
		grid-area preview;

		img {
			block-size 100%;
			object-fit contain;
		}
	}
}

.lectures {
	position relative;
	overflow hidden;
	background linear-gradient(45deg, rgba(255, 63, 58, 20%), rgba(247, 94, 5, 20%));

	&__decor {
		.dots {
			transform rotate(90deg);
			bottom 0;
			left -3%;
		}

		.circles {
			top -15%;
			right -5%;
		}
	}

	&__body {
		flex-set column nowrap;
		align-items center;
		firstLevelElementsMargin 'bottom' 60;

		* {
			position static;
			z-index 1;
		}
	}

	&__last-lects {
		flex-set column nowrap;
		firstLevelElementsMargin 'bottom' 25;
	}

	&__footer {
		firstLevelElementsMargin 'right' 40;

		@media (max-width 500px) {
			flex-set column nowrap;
			firstLevelElementsMargin 'right' 0;
			firstLevelElementsMargin 'bottom' 10;
		}
	}

	&__question {
		color #1E212C;
		font-weight 700;
		font-size 28px;
	}
}

.our-team {
	position relative;
	overflow hidden;
	background #F4F5F6;

	&__decor {
		.semicircle {
			top 5%;
			left 10%;
		}

		.shapes {
			top 50%;
			right -1%;
		}

		.small-circles {
			top 60%;
			left 5%;
		}

		.short-shapes {
			top 65%;
			left 60%;
		}

		.right-bottom-circles {
			right -10%;
			bottom -5%;
		}
	}

	&__body {
		* {
			position static;
			z-index 1;
		}
	}

	&__header {
		flex-set row nowrap;
		firstLevelElementsMargin 'right' 10;
		align-items flex-end;
		justify-content space-between;
		padding-bottom 60px;

		@media (max-width 426px) {
			padding-bottom 30px;
		}
	}

	&__slider-buttons {
		display flex;
		firstLevelElementsMargin 'right' 8;
	}

	&__subtitle {
	}

	&__title {
	}

	&__students-say-slider-wrapper {
		position relative;
		display flex;
		align-items center;
		firstLevelElementsMargin 'right' 40;

		@media (max-width 1200px) {
			firstLevelElementsMargin 'right' 15;
		}

		@media (max-width 1000px) {
			firstLevelElementsMargin 'right' 0;
		}

		@media (min-width 1000px) {
			.quote {
				margin 20px;
				margin-bottom 50px;
			}
		}
	}

	&__second-header {
		margin-top 180px;

		@media (max-width 1000px) {
			margin-top 100px;
		}

		@media (max-width 768px) {
			margin-top 40px;
		}
	}
}

.our-team-slider {
	&__prev-btn, &__next-btn {
		padding 15px;
		border-radius 50%;
		cursor pointer;
		transition all .3s ease;

		path {
			transition all .3s ease;
		}

		&:hover, &:focus {
			background #FF3F3A;

			path {
				fill #fff;
			}
		}

		&.unactive {
			opacity .3;
		}
	}

	&__prev-btn {
	}

	&__next-btn {
	}
}

.students-say-slider {
	&__prev, &__next {
		@media (max-width 1000px) {
			display none;
		}
	}

	&__pag {
		position absolute;
		height max-content;
		bottom -10% !important;
		left 0 !important;

		>* {
			width 30px !important;
			height 3px !important;
			border-radius 3px !important;
			background #B3B7BC;
			transition all .3s ease;

			&.swiper-pagination-bullet-active {
				background #424551;
			}
		}
	}
}

.lasted-posts {
	&__body {
	}

	&__header {
		flex-set row nowrap;
		align-items flex-end;
		justify-content space-between;
		firstLevelElementsMargin 'right' 20;
		padding-bottom 60px;

		@media (max-width 426px) {
			padding-bottom 30px;
		}
	}

	&__content {
		display grid;
		grid-template 'post post post' 1fr / 1fr 1fr 1fr;
		gap 30px;

		@media (max-width 1000px) {
			grid-template 'post post' 1fr / 1fr 1fr;
		}

		@media (max-width 426px) {
			grid-template 'post' 1fr / 1fr;
		}
	}
}

.confirmed {
	&__body {
		padding-top 120px;
		padding-bottom 20px;
		display grid;
		grid-template 'text-block certif' 1fr / .8fr 1.2fr;
		gap 100px;

		@media (max-width 1000px) {
			grid-template 'text-block' auto 'certif' auto / 1fr;
			gap 20px;
		}

		@media (max-width 768px) {
			padding-top 60px;
		}

		@media (max-width 426px) {
			padding-top 30px;
		}
	}

	&__text-block {
		grid-area text-block;
		firstLevelElementsMargin 'bottom' 45;

		@media (max-width 1000px) {
			firstLevelElementsMargin 'bottom' 20;
		}
	}

	&__title {
	}

	&__text {
	}

	&__brands {
		firstLevelElementsMargin 'right' 40;

		@media (max-width 1000px) {
			flex-set row wrap;
			justify-content center;
			firstLevelElementsMargin 'right' 20;
		}
	}

	&__certificate {
		grid-area certif;

		img {
			position relative;
			z-index 1;
			width 100%;
			object-fit contain;
			box-shadow 0 10px 20px rgba(0, 0, 0, .1);

			@media (min-width 1001px) {
				transform scale(1.1) translate3d(-4%, 5%, 0);
			}
		}
	}
}
