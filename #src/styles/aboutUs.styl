@import '_mixins';

.our-team {
	&__decor {
	}

	&__body {
		* {
			position relative;
			z-index 1;
		}
	}

	&__students-say {
	}

	&__students-say-slider-wrapper {
	}

	&__where-our-students-work {
		padding-top 180px;

		@media (max-width 768px) {
			padding-top 80px;
		}

		.title-wrapper {
			padding-bottom 50px;
		}
	}
