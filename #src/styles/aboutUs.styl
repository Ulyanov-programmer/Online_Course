.advantages {
	position relative;

	&__decor {
		.arrows {
			top -10%;
			right 8%;
		}
	}

	&__body {
		firstLevelElementsMargin 'bottom' 50;
	}

	&__title {
	}

	&__items {
		flex-set row wrap;
		justify-content space-around;
		firstLevelElementsMargin 'bottom' 20;

		>* {
			flex 1 1 20%;
		}

		@media (min-width 950px) {
			>* {
				&:not(:first-child) {
					padding-left 25px;
				}
			}

			>* {
				&:not(:last-child) {
					position relative;
					padding-right 25px;

					&:after {
						position absolute;
						top 0;
						right 0;
						width 1px;
						height 100%;
						background linear-gradient(0, rgba(218, 219, 221, 25%), rgba(218, 219, 221, 1), rgba(218, 219, 221, 25%));
						content '';
					}
				}
			}
		}

		@media (max-width 949px) {
			firstLevelElementsMargin 'right' 20;

			>* {
				min-width 150px;
			}
		}
	}
}

