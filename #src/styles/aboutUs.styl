.friend-companies {
	flex-set row wrap;
	justify-content center;
	firstLevelElementsMargin 'right' 50;
	firstLevelElementsMargin 'bottom' 30;

	@media (max-width 600px) {
		display grid;
		grid-template-columns repeat(2, 1fr);
		justify-items center;
		gap 10px;
		firstLevelElementsMargin 'right' 0;
		firstLevelElementsMargin 'bottom' 0;
	}

	&__company {
		@media (min-width 768px) {
			filter grayscale(1);

			&:hover, &:focus {
				filter grayscale(0);
			}
		}

		transition all .2s ease;
	}
}

.meet-our-team {
	position relative;

	&__decor {
		.arrows {
			top 20px;
			left 90px;
		}
	}

	&__body {
		firstLevelElementsMargin 'bottom' 80;
	}

	&__subtitle {
	}

	&__title {
	}

	&__grid-team {
		display grid;
		grid-template 'member member member member' 1fr / 1fr 1fr 1fr 1fr;
		gap 30px;

		@media (max-width 900px) {
			grid-template 'member member member' 1fr / 1fr 1fr 1fr;
		}

		@media (max-width 500px) {
			grid-template 'member member' 1fr / 1fr 1fr;
			gap 15px;
		}
	}
}

.how-we-do-by-step {
	position relative;

	&__decor {
		.circles {
			top 0;
			right 0;
		}
	}

	&__body {
		display grid;
		grid-template 'title decor' auto 'steps decor' 1fr / 1fr 1fr;
		gap 60px 100px;

		@media (max-width 1300px) {
			grid-template 'title decor' auto 'steps decor' 1fr / 60% 40%;
			gap 60px 50px;
		}

		@media (max-width 768px) {
			grid-template 'title' auto 'steps' auto 'decor' 200px / 1fr;
			gap 30px;
		}
	}

	.title-wrapper {
		grid-area title;
	}

	&__subtitle {
	}

	&__title {
	}

	&__decor {
		grid-area decor;
	}

	&__steps {
		grid-area steps;

		>* {
			&:not(:last-child) {
				padding-bottom 30px;
			}
		}
	}
}

.step {
	position relative;

	&:first-child {
		&:before {
			margin-top 10px;
		}
	}

	&:before {
		position absolute;
		top 0;
		left 0;
		display inline-block;
		height 100%;
		width 1.5px;
		background #d8d8db;
		content '';
	}

	&__body {
		padding-left 40px;
		flex-set column nowrap;
		firstLevelElementsMargin 'bottom' 5;
		color #787A80;
	}

	&__number {
		position relative;
		font-size 12px;
		text-transform uppercase;
		font-weight 900;

		&:before {
			display inline-block;
			content 'Step';
		}

		&:after {
			position absolute;
			display inline-block;
			top 50%;
			left -47px;
			transform translate(0, -50%);
			background #FF3F3A;
			border 4px solid #fff;
			border-radius 50%;
			block-size 15px;
			content '';
		}
	}

	&__title {
		font-weight 700;
		font-size 20px;
		color #1E212C;
		line-height 1.6;
		padding-bottom 10px;
	}

	&__text {
	}
}

.what-we-teach {
	&__body {
		firstLevelElementsMargin 'bottom' 40;
	}

	&__subtitle {
	}

