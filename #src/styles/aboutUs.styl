.advantages-video {
	position relative;

	&__decor {
		.dots {
			bottom 0;
			left 5%;

			@media (max-width 850px) {
				bottom 80%;
			}

			@media (max-width 426px) {
				display none;
			}
		}
	}

	&__body {
		display grid;
		grid-template 'play-btn play-btn play-btn' auto 'play-img play-img advs' / 1fr 1fr 1fr;
		gap 30px 80px;

		* {
			position relative;
			z-index 1;
		}

		@media (max-width 850px) {
			grid-template '. play-btn .' auto 'advs advs advs' / 1fr 1fr 1fr;
		}
	}

	&__play-video {
		justify-self start;
		grid-area play-btn;
		min-width 150px;
	}

	&__play-preview {
		grid-area play-img;

		@media (max-width 850px) {
			display none;
		}
	}

	&__advantages {
		grid-area advs;
		align-self center;
		firstLevelElementsMargin 'bottom' 20;

		@media (max-width 850px) {
			flex-set row wrap;
			justify-content center;
			firstLevelElementsMargin 'right' 20;
		}
	}
}

