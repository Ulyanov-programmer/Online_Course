}

select {
	cursor pointer;
	appearance none;
	background #fff;
}

textarea {
	scrollbar-width 0;
	resize none;

	&::-webkit-scrollbar {
		width 0;
	}

	outline none;
	min-height 120px;
}

input[type=date] {
	&::-webkit-datetime-edit {
		/* all input, but not calendar button */
		background greenyellow;
	}

	&::-webkit-datetime-edit-fields-wrapper {
		/* only date values */
		background yellow;
	}

	&::-webkit-datetime-edit-text {
		/* elements between numbers */
		background gray;
	}

	&::-webkit-datetime-edit-month-field {
		/* month */
	}

	&::-webkit-datetime-edit-day-field {
		/* day */
	}

	&::-webkit-datetime-edit-year-field {
		/* year */
	}

