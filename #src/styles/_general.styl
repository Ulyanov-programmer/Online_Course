	&__socials {
		position absolute !important;
		bottom 0;
		right 0;
		block-size 100%;
		flex-set row nowrap;
		justify-content flex-end;
		align-items flex-end;
		padding 10px;
		background linear-gradient(0, rgba(0, 0, 0, 80%), rgba(0, 0, 0, 10%), rgba(0, 0, 0, 0));
		hide();
		transition all .3s ease;

		a {
			padding 10px;

			&:hover, &:focus {
				svg {
					opacity 1;
				}
			}
		}

		svg {
			opacity .6;
			transition all .2s ease;
		}
	}

