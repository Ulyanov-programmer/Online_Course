		font-weight 600;
		font-size 20px;
		color #424551;
	}

	&__post {
		color #787A80;
	}
}

.quote {
	box-shadow 0 20px 30px rgba(0, 0, 0, .1);

	&__body {
		display grid;
		grid-template 'decor text' auto 'decor author' auto / 50px auto;
		padding 65px 105px;
		background #fff;
		gap 20px 10px;

		@media (max-width 1000px) {
			padding 30px 50px;
		}

		@media (max-width 550px) {
			padding 15px;
		}

		@media (max-width 380px) {
			grid-template 'decor text' auto 'decor author' auto / 30px auto;
		}
	}

	&__decor {
