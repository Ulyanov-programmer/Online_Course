.container {
	margin auto;

	@media (min-width 1920px) {
		// Insert the width of the container as a percentage of the width of the layout.
		width 70%;
	}

	@media (min-width unit($layoutWidth, px)) {
		// Insert the width of the container as a percentage of the width of the layout.
		width 80%;
	}

	@media (min-width 768px) and (max-width unit($layoutWidth, px)) {
		width 80%;
	}

	@media (min-width 426px) and (max-width 768px) {
		width 95%;
	}

	@media (max-width 426px) {
		width 95%;
	}
}

.modal-window {
	position fixed;
	z-index 15;
	top 0;
	left 0;
	background rgba(0, 0, 0, .67);
	block-size 100%;
	hide();
	transition all .3s ease;

	&.active {
		show();
	}

	&__body {
		display grid;
		padding 10px 0;
		height 100%;
		align-items center;
		justify-content center;
	}

	&__video {
		height 70vh;
		width 100%;
		object-fit contain;
	}
}

.contain-image {
	img {
		block-size 100%;
		object-fit contain;
	}
}

.text {
	line-height 1.5;
	color #787A80;
}

.bl-text {
	line-height 1.5;
	color #424551;
}

.fat-text {
	line-height 1.5;
	font-weight 700;
	color #424551;
	font-size 20px;
}

.anim-svg {
	path, stroke {
		transition all .2s ease;
	}
}

.body-big-padding {
	padding 120px 0;

	@media (max-width 768px) {
		padding 60px 0;
	}

	@media (max-width 426px) {
		padding 45px 0;
	}
}

.body-small-padding {
	padding 60px 0;

	@media (max-width 426px) {
		padding 30px 0;
	}
}

.button {
	background linear-gradient(45deg, #FF3F3A, #F75E05);
	color #fff;
	padding 15px 40px;
	border-radius 4px;
	font-weight 700;
	text-align center;
	border 1px solid #FF3F3A;
	transition all .3s ease;

	&:hover, &:focus {
		color #FF3F3A;
		background transparent;
	}

	&_reverse {
		background transparent;
		color #FF3F3A;

		&:hover, &:focus {
			background linear-gradient(45deg, #FF3F3A, #F75E05);
			color #fff;
		}
	}
}

.lecture {
	position relative;
	background #fff;
	border-radius 4px;
	transition all .3s ease;

	&:hover, &:focus {
		z-index 1;
		box-shadow 0 30px 30px rgba(255, 64, 58, .3);
	}

	&_column {
		.lecture__body {
			flex-set column nowrap;
			align-items flex-start;
			justify-content space-between;
			height 100%;
			firstLevelElementsMargin 'bottom' 20;

			@media (max-width 1200px) {
				padding 15px;
			}
		}

		.lecture__ref {
			margin-left 0;
			width 100%;
		}

		.lecture__date {
			grid-template 'number month' max-content 'time time' max-content / max-content auto;
			gap 10px 10px;
		}

		.lecture__month, .lecture__number {
			color #FF3F3A;
			font-weight 700;
			font-size 28px;
		}
	}

	&_gray-shadow {
		&:hover, &:focus {
			box-shadow 0 30px 30px rgba(0, 0, 0, .1);
		}
	}

	&_bordered {
		border 1px solid #E5E8ED;
	}

	&__body {
		flex-set row nowrap;
		align-items center;
		padding 32px 40px;
		firstLevelElementsMargin 'right' 40;

		@media (max-width 1000px) {
			flex-set column nowrap;
			firstLevelElementsMargin 'right' 0;
			firstLevelElementsMargin 'bottom' 40;
		}
	}

	&__date {
		display grid;
		grid-template 'number month month' 1fr 'number time time' 1fr / 1fr 1fr 1fr;
		align-items center;
		gap 10px 20px;
		min-width 180px;
	}

	&__number {
		grid-area number;
		color #FF3F3A;
		font-size 48px;
	}

	&__month {
		grid-area month;
		font-weight 700;
		font-size 20px;
	}

	&__time {
		grid-area time;
	}

	&__about {
		flex-set column nowrap;
		firstLevelElementsMargin 'bottom' 8;
	}

	&__title {
		color #1E212C;
		font-weight 700;
		font-size 20px;
		line-height 1.5;
	}

	&__type {
	}

	&__ref {
		text-align center;
		margin-left auto;
		min-width 160px;

		@media (max-width 1000px) {
			margin-left 0;
		}
	}
}

.post {
	&_big {
		@media (min-width 700px) {
			grid-column span 2;
		}
	}

	&__body {
		flex-set column nowrap;
		firstLevelElementsMargin 'bottom' 16;
		height 100%;
	}

	&__preview {
		position relative;

		img {
			block-size 100%;
			border-radius 4px;
			object-fit cover;
		}
	}

	&__preview-decor {
		position absolute;
		top 12px;
		left 12px;
		background #fff;
		padding 5px 8px;
		border-radius 4px;

		&.podcast, &.video, &.article {
			&:before {
				margin-right 5px;
				line-height .1;
			}
		}

		&.podcast {
			&:before {
				content url('../img/decor/podcDec.svg');
			}
		}

		&.video {
			&:before {
				content url('../img/decor/videoDec.svg');
			}
		}

		&.article {
			&:before {
				content url('../img/decor/artcDec.svg');
			}
		}
	}

	&__metadata {
		flex-set row wrap;
		font-size 14px;
		color #787A80;

		>* {
			display inline-block;
			padding-top 5px;

			&:not(:last-child) {
				&:after {
					display inline-block;
					padding 0 12px;
					content '|';
				}
			}
		}
	}

	&__type {
		font-weight 700;
	}

	&__duration, &__date, &__preview-decor {
		flex-set row nowrap;
		justify-content center;
		align-items center;
	}

	&__date {
		&:before {
			content url('../img/decor/postCalendar.svg');
			margin-right 8px;
		}
	}

	&__duration {
		&:before {
			content url('../img/decor/timeDec.svg');
			margin-right 8px;
		}
	}

	&__main {
		firstLevelElementsMargin 'bottom' 8;
	}

	&__title {
		display inline-block;
		font-size 20px;
		font-weight 700;
		color #1E212C;
		line-height 1.5;
	}

	&__text {
		line-height 1.6;
	}

	&__ref {
		margin-top auto;
		font-weight 700;
		color #1E212C;

		&:hover, &:focus {
			&:after {
				margin-left 15px;
			}
		}

		&:after {
			content url('../img/posts/postRefArrow.svg');
			margin-left 11px;
			transition all .3s ease;
		}
	}
}

.socials {
	display inline-grid;
	grid-template-columns repeat(6, 1fr);
	gap 20px;

	@media (max-width 768px) {
		g {
			opacity 1;
		}
	}

	&__element {
		g {
			transition all .3s ease;
		}

		&:hover, &:focus {
			g {
				opacity 1;
			}
		}
	}
}

