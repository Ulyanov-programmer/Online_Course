		firstLevelElementsMargin 'bottom' 10;

			>* {
				flex 1 1 auto;
			}
		}
	}

	&__change-content-visible-buttons {
		firstLevelElementsMargin 'right' 5;

		@media (max-width 768px) {
			firstLevelElementsMargin 'right' 15;
		}

		button {
			padding 5px;

			@media (max-width 768px) {
				padding 10px;
			}

			path {
				transition all .2s ease;
			}

			&.active, &:hover, &:focus {
				path {
					fill #FF3F3A;
				}
			}
		}
	}

	&__content {
	}

	&__courses {
		display grid;
		grid-template 'course course course' 1fr / 1fr 1fr 1fr;
		gap 30px;

		@media (max-width 900px) {
			grid-template 'course course' 1fr / 1fr 1fr;
			gap 15px;
		}

		@media (max-width 400px) {
			grid-template 'course' 1fr / 1fr;
		}
	}

	&__lects {
		firstLevelElementsMargin 'bottom' 25;
	}

	&__grid-lects {
		display grid;
		grid-template 'el el el' 1fr / 1fr 1fr 1fr;
		gap 30px;

		@media (max-width 1150px) {
			grid-template 'el el' 1fr / 1fr 1fr;
		}

		@media (max-width 768px) {
			gap 15px;
		}

		@media (max-width 500px) {
			grid-template 'el' 1fr / 1fr;
		}
	}

	&__posts {
		display grid;
		grid-template 'post post post' 1fr / 1fr 1fr 1fr;
		gap 30px;

		@media (max-width 700px) {
			grid-template 'post post' 1fr / 1fr 1fr;
			gap 15px;
		}

		@media (max-width 500px) {
			grid-template 'post' 1fr / 1fr;
			gap 30px;
		}
	}

	&__footer {
		display flex;
		justify-content center;
		align-items center;
	}
}

.filter-simple-btn {
	flex-set row nowrap;
	justify-content center;
	align-items center;
	padding 10px 20px;
	border-radius 4px;
	border 1px solid rgba(255, 255, 255, 0);
	font-weight 700;
	color #9A9CA5;
	transition all .2s ease;

	&:hover, &:focus {
		border-color #FF3F3A;
		color #FF3F3A;
	}

	&__counter {
		font-size 10px;
		align-self flex-start;
		margin-left 5px;
	}
}

.load-more {
	span {
		font-weight 700;
		color #424551;
		padding-left 15px;
	}

	img {
		transition all .3s ease;
	}

	&:hover, &:focus {
		img {
			transform rotate(180deg);
		}
	}

	&.active, &:active {
		img {
			animation round 1s ease 0s infinite;
		}
	}

	@keyframes round {
		from {
			transform rotate(0);
		}

		to {
			transform rotate(180deg);
		}
	}
}

